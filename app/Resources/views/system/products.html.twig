{% extends '@App/adminlte/layout.html.twig' %}

{% block main_title %}Productos{% endblock main_title %}

{% block main_breadcrumb %}
    <li><a href="{{ path('homepage') }}"><i class="fa fa-home"></i>Inicio</a></li>
    <li class="active"><a href="{{ path('products') }}"><i class="fa fa-cubes"></i>Productos</a></li>
{% endblock main_breadcrumb %}

{% block main_container %}
    <div class="row">
        <div class="col-md-6">
            <div class="box collapsed-box">
                <div class="box-header with-border">
                    <h3 class="box-title"><i class="fa fa-list-ul"></i> Listado de Marcas</h3>
                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-plus"></i></button>
                    </div>
                </div>
                <div class="box-body">
                    <button class="btn btn-primary float-right modal-trigger" data-action="{{ path('mjmc_crud', { entityName: 'ProductBrand' }) }}" data-method="POST">Nuevo</button>

                    <table class="table table-striped table-bordered table-hover datatable" style="width:100%" data-src="{{ path('productBrand_list') }}">
                        <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Acciones</th>
                        </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="box collapsed-box">
                <div class="box-header with-border">
                    <h3 class="box-title"><i class="fa fa-list-ul"></i> Listado de Categorias</h3>
                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-plus"></i></button>
                    </div>
                </div>
                <div class="box-body">
                    <button class="btn btn-primary float-right modal-trigger" data-action="{{ path('mjmc_crud', { entityName: 'ProductCategory' }) }}" data-method="POST">Nuevo</button>

                    <table class="table table-striped table-bordered table-hover datatable" style="width:100%" data-src="{{ path('productCategory_list') }}">
                        <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Acciones</th>
                        </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-md-12">
            <div class="box ">
                <div class="box-header with-border">
                    <h3 class="box-title"><i class="fa fa-list-ul"></i> Listado de Productos</h3>
                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                    </div>
                </div>
                <div class="box-body">

                    {% include '@App/base/date_filter.html.twig' %}

                    <button class="btn btn-primary float-right modal-trigger" data-action="{{ path('mjmc_crud', { entityName: 'Product' }) }}" data-method="POST">Nuevo</button>

                    <table class="table table-striped table-bordered table-hover datatable-filter" style="width:100%" data-src="{{ path('product_list') }}">
                        <thead>
                        <tr>
                            <th>Última actualización</th>
                            <th>Cédula</th>
                            <th>Nombre</th>
                            <th>Acciones</th>
                        </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock main_container %}
