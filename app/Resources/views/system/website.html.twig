{% extends '@App/adminlte/layout.html.twig' %}

{% block main_title %}Website{% endblock main_title %}

{% block main_breadcrumb %}
    <li><a href="{{ path('homepage') }}"><i class="fa fa-home"></i> Inicio</a></li>
    <li class="active"><a href="{{ path('website') }}"><i class="fa fa-users"></i> Sitio Web</a></li>
{% endblock main_breadcrumb %}

{% block main_container %}
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="box-header with-border">
                    <h3 class="box-title"><i class="fa fa-list-ul"></i>Ajustes del Sitio Web</h3>
                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                    </div>
                </div>
                <div class="box-body">
                    <div class="row">
                        <div class="col-md-12" style="height: 34px">
                            <button class="btn btn-primary float-right modal-trigger" data-action="{{ path('company_settings_modal') }}" data-method="PUT">Editar</button>
                        </div>
                        <div class="col-md-6">
                            {{ form(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock main_container %}
