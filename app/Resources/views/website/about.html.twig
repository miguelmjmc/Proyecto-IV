{% extends 'website/layout.html.twig' %}


{% block main %}

    <section class="bg-img1 txt-center p-lr-15 p-tb-92" style="background-image: url({{ asset('img/bg-01.jpg') }});"></section>

    <section class="bg0 p-t-75 p-b-120">
        <h2 class="ltext-105 cl0 txt-center" style="color: #000; margin-bottom: 50px">Quienes Somos</h2>
        <div class="container">
            <div class="row">
                <div class="col-md-7 col-lg-8">
                    <div class="p-t-7 p-r-85 p-r-15-lg p-r-0-md">
                        <h3 class="mtext-111 cl2 p-b-16">Nuestra Misión</h3>
                        <p class="stext-113 cl6 p-b-50 text-justify">{{ companySettings.mission }}</p>

                        <div class="p-t-7 p-l-85 p-l-15-lg p-l-0-md">
                        <h3 class="mtext-111 cl2 p-b-16">Nuestra Visión</h3>
                            <p class="stext-113 cl6 p-b-50 text-justify">{{ companySettings.vision }}</p>
                        </div>
                    </div>
                </div>
                <div class="col-11 col-md-5 col-lg-4 m-lr-auto p-b-50">
                    <div class="how-bor1 ">
                        <div class="hov-img0">
                            <img src="{{ asset('img/about-01.jpg') }}" alt="IMG">
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="order-md-2 col-md-7 col-lg-8 p-b-30">
                    <div class="p-t-7 p-l-85 p-l-15-lg p-l-0-md">
                        <h3 class="mtext-111 cl2 p-b-16">Nuestra Historia</h3>
                        {% for p in companySettings.history|split('. ') %}
                            <p class="stext-113 cl6 p-b-26 text-justify">{{ p }}</p>
                        {% endfor %}
                    </div>
                </div>

                <div class="order-md-1 col-11 col-md-5 col-lg-4 m-lr-auto">
                    <div class="how-bor2">
                        <div class="hov-img0">
                            <img src="{{ asset('img/about-02.jpg') }}" alt="IMG">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

{% endblock main %}
