{% extends 'website/layout.html.twig' %}

{% form_theme form 'bootstrap_3_layout.html.twig' %}

{% block main %}
    <div class="container" style="margin-top: 80px">
        <div class="bread-crumb flex-w p-l-25 p-r-15 p-t-30 p-lr-0-lg">
            <a href="{{ path('website_homepage') }}" class="stext-109 cl8 hov-cl1 trans-04">
                Inicio
                <i class="fa fa-angle-right m-l-9 m-r-10" aria-hidden="true"></i>
            </a>
            <a href="{{ path('website_cart') }}" class="stext-109 cl8 hov-cl1 trans-04">
                Carrito
                <i class="fa fa-angle-right m-l-9 m-r-10" aria-hidden="true"></i>
            </a>
            <span class="stext-109 cl4">
				Reserva
			</span>
        </div>
    </div>

    <section class="sec-product-detail bg0 p-t-65 p-b-60">
        <div class="container">
            <div class="row">
                {% if success|default %}
                    <div class="col-12">
                        <h2 class="text-center">Reserva de Productos Realizada Exitosamente</h2>
                    </div>
                    <div class="col-12 p-t-20">
                        Nuestros servicio de atención al cliente se pondra en contacto con usted a la brevedad posible.
                    </div>
                    <div class="col-12 p-t-40 text-center">
                        <i class="fa fa-check-circle-o" style="font-size: 20rem; color: #28A745;"></i>
                    </div>
                {% else %}
                    <div class="col-12">
                        <h2 class="text-center">Reservar Productos</h2>
                    </div>
                    <div class="col-12 p-t-20">
                        Por favor complete el formulario para realizar la reservación de los productos.
                    </div>
                    <div class="col-12 p-t-20">
                        {{ form (form) }}
                    </div>
                {% endif %}
            </div>
        </div>
    </section>

{% endblock %}
