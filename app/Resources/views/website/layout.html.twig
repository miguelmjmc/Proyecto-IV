{% block head_title %} {{ companySettings.name }} {% endblock head_title %}


{% block body %}
    <body class="animsition">
    {% block content_wrapper %}

        {{ parent() }}

    {% endblock content_wrapper %}
    </body>
{% endblock body %}


{% block header %}
    <header id="page-top">
        <div class="container-menu-desktop">

            <div class="top-bar">
                <div class="content-topbar flex-sb-m h-full container">
                    <div class="left-top-bar">
                        {{ companySettings.slogan }}
                    </div>
                    <div class="right-top-bar flex-w h-full">
                        <a href="{{ path('homepage') }}" class="flex-c-m trans-04 p-lr-25">
                            {{ app.user ? 'Mi Cuenta' : 'Iniciar Sesión' }}
                        </a>

                        {% if app.user %}
                            <a href="{{ path('fos_user_security_logout') }}" class="flex-c-m trans-04 p-lr-25">
                                Cerrar Sesión
                            </a>
                        {% endif %}
                    </div>
                </div>
            </div>

            <div class="wrap-menu-desktop">
                <nav class="limiter-menu-desktop container">
                    <a href="{{ path('website_homepage') }}" class="logo">
                        <img src="{{ asset(companySettings.img) }}" alt="Logo">
                        <h2 class="cl2 p-l-20 glow">{{ companySettings.name }}</h2>
                    </a>

                    <div class="menu-desktop">
                        <ul class="main-menu">
                            <li><a href="{{ path('website_homepage', { _fragment: 'page-top' }) }}">Inicio</a></li>
                            <li><a href="{{ path('website_products') }}">Nuestros Productos</a></li>
                            <li><a href="{{ path('website_homepage', { _fragment: 'about' }) }}">Sobre Nosotros</a></li>
                            <li><a href="{{ path('website_homepage', { _fragment: 'contacts' }) }}">Contactanos</a></li>
                        </ul>
                    </div>
                </nav>
            </div>
        </div>

        <!-- Header Mobile -->
        <div class="wrap-header-mobile">
            <!-- Logo moblie -->
            <div class="logo-mobile">
                <a href="{{ path('website_homepage') }}">
                    <img src="{{ asset(companySettings.img) }}" alt="Logo">
                    <h2 class="cl2 p-l-50 glow">{{ companySettings.name }}</h2>
                </a>
            </div>

            <!-- Button show menu -->
            <div class="btn-show-menu-mobile hamburger hamburger--squeeze">
				<span class="hamburger-box">
					<span class="hamburger-inner"></span>
				</span>
            </div>
        </div>


        <!-- Menu Mobile -->
        <div class="menu-mobile">
            <ul class="topbar-mobile">
                <li>
                    <div class="right-top-bar flex-w">
                        <a href="#" class="flex-c-m p-lr-10 trans-04">Preguntas Frecuentes</a>
                        <a href="#" class="flex-c-m p-lr-10 trans-04">Mi Cuenta</a>
                    </div>
                </li>
            </ul>
            <ul class="main-menu-m">
                <li><a href="{{ path('website_homepage', { fragment: '#home' }) }}">Inicio</a></li>
                <li><a href="{{ path('website_products') }}">Nuestros Productos</a></li>
                <li><a href="{{ path('website_homepage', { fragment: '#about' }) }}">Sobre Nosotros</a></li>
                <li><a href="{{ path('website_homepage', { fragment: '#contacts' }) }}">Contactanos</a></li>
            </ul>
        </div>
    </header>

{% endblock header %}

{% block main %}{% endblock main %}

{% block footer %}
    <!-- Footer -->
    <footer class="bg3 p-t-75 p-b-32">
        <div class="container">
            <div class="row">
                <div class="col-sm-4 p-b-50">
                    <h4 class="stext-301 cl0 p-b-30">Menú</h4>
                    <ul>
                        <li class="p-b-10"><a href="{{ path('website_homepage', { _fragment: 'page-top' }) }}" class="stext-107 cl7 hov-cl1 trans-04">Inicio</a></li>
                        <li class="p-b-10"><a href="{{ path('website_products') }}" class="stext-107 cl7 hov-cl1 trans-04">Nuestros Productos</a></li>
                        <li class="p-b-10"><a href="{{ path('website_homepage', { _fragment: 'about' }) }}" class="stext-107 cl7 hov-cl1 trans-04">Sobre Nosotros</a></li>
                        <li class="p-b-10"><a href="{{ path('website_homepage', { _fragment: 'contacts' }) }}" class="stext-107 cl7 hov-cl1 trans-04">Contactanos</a></li>
                    </ul>
                </div>

                <div class="col-sm-4 p-b-50">
                    <h4 class="stext-301 cl0 p-b-30">Tasa de Cambio</h4>
                        <ul>
                            <li class="p-b-10"><a href="#" class="stext-107 cl7 hov-cl1 trans-04">$1 = {{ currencyConversion.dollarValue|default|number_format(2, ',', '.') }} Bs</a></li>
                            <li class="p-b-10"><a href="#" class="stext-107 cl7 hov-cl1 trans-04">€1 = {{ currencyConversion.euroValue|default|number_format(2, ',', '.') }} Bs</a></li>
                        </ul>
                        <small>Fecha: {{ currencyConversion.lastUpdate|date('Y/m/d') }}</small>
                </div>
                <div class="col-sm-4 p-b-50">
                    <h4 class="stext-301 cl0 p-b-30">Contáctanos</h4>
                    <p class="stext-107 cl7 size-201">

                        ¿Alguna pregunta? Háganos saber a través del correo {{ companySettings.email }} o llámenos al {{ companySettings.phone1 }}{{ companySettings.phone2 ? ' / ' ~ companySettings.phone2 }}.
                    </p>
                    <div class="p-t-27">
                        <a href="{{ companySettings.facebook }}" target="_blank" class="fs-18 cl7 hov-cl1 trans-04 m-r-16"><i class="fa fa-facebook"></i></a>
                        <a href="{{ companySettings.twitter }}" target="_blank" class="fs-18 cl7 hov-cl1 trans-04 m-r-16"><i class="fa fa-twitter"></i></a>
                        <a href="{{ companySettings.instagram }}" target="_blank" class="fs-18 cl7 hov-cl1 trans-04 m-r-16"><i class="fa fa-instagram"></i></a>
                        <a href="{{ companySettings.youtube }}" target="_blank" class="fs-18 cl7 hov-cl1 trans-04 m-r-16"><i class="fa fa-youtube-play"></i></a>
                    </div>
                </div>
            </div>

            <div class="p-t-40">
                <p class="stext-107 cl6 txt-center">Copyright &copy; 2020 {{ companySettings.name }}. Todos los derechos reservados.</p>
            </div>

        </div>
    </footer>

    <!-- Back to top -->
    <div class="btn-back-to-top" id="myBtn">
		<span class="symbol-btn-back-to-top">
			<i class="zmdi zmdi-chevron-up"></i>
		</span>
    </div>

{% endblock footer %}
