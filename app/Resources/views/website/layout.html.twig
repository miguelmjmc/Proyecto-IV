    <link rel="stylesheet" type="text/css" href="{{ asset('vendor/perfect-scrollbar/perfect-scrollbar.css') }}">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="{{ asset('css/util.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('css/main.css') }}">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="{{ asset('css/website-custom.css') }}">

    <style>
        .glow, .main-menu a, .wrap-icon-header i {
            text-shadow: 0 0 1px rgba(255, 255, 255, 1), 0 0 2px rgba(255, 255, 255, 1), 0 0 3px rgba(255, 255, 255, 1), 0 0 4px rgba(255, 255, 255, 1), 0 0 5px rgba(255, 255, 255, 1), 0 0 10px rgba(255, 255, 255, 1), 0 0 15px rgba(255, 255, 255, 1), 0 0 20px rgba(255, 255, 255, 1);
        }

        @media (max-width: 1180px) {
            .logo h2 {
                font-size: 28px;
            }
        }

        @media (max-width: 1150px) {
            .logo h2 {
                font-size: 25px;
            }
        }

        @media (max-width: 570px) {
            .logo-mobile h2 {
                font-size: 25px;
            }
        }

        @media (max-width: 500px) {
            .logo-mobile h2 {
                font-size: 20px;
            }
        }

        @media (max-width: 720px) {
            .wrap-icon-header {
                display: none;
            }
        }
    </style>
{% endblock styles %}

